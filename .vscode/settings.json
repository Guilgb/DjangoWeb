{
    "git.ignoreLimitWarning": true,
    "python.linting.flake8Args": [
        "--max-line-length=220",
        "--ignore=E402,F841,F401,E302,E305",
    ],
    "python.linting.mypyArgs": [
        "--follow-imports=silent",
        "--ignore-missing-imports=True",
        "--show-column-numbers",
        "--no-pretty",
        "--follow-imports: {silent}",
    ],    
}
